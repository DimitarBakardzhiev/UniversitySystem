@model IQueryable<UniversitySystem.Models.Course>
@{
    ViewBag.Title = "Courses";
}

<h2>My Courses</h2>
@if (Model.Count() == 0)
{
    <h3>You don't participate in any course!</h3>
}
else
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Semester</th>
                <th>Leave</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td><a href="/Courses/Details/@course.Id">@course.Title</a></td>
                    <td>@course.Year</td>
                    <td>@course.Semester.ToString()</td>
                    <td><a href="/Courses/LeaveStudent/@course.Id" class="btn btn-warning btn-sm">Leave</a></td>
                </tr>
            }
        </tbody>
    </table>
}

